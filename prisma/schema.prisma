generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JobApplication {
  id          String   @id @default(cuid())
  userId      String
  fullName    String
  email       String
  phone       String?
  position    String
  company     String
  resumeUrl   String?
  coverLetter String?
  metadata    Json?
  createdAt   DateTime @default(now())
}

model Contact {
  id        String   @id @default(cuid())
  email     String
  message   String
  createdAt DateTime @default(now())
}


